// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deputado {
  id           Int    @id
  nome         String
  siglaPartido String
  siglaUf      String
  urlFoto      String
  email        String?
  despesas Despesa[]
}

model Despesa {
  id Int @id @default(autoincrement())
  ano Int
  mes Int
  tipoDespesa String
  valorDocumento Float

  deputadoId Int
  deputado Deputado @relation(fields: [deputadoId], references: [id])
}